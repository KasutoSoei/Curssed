{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .account-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .account-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .account-subtitle {
            color: #888;
            font-size: 1.2em;
        }
        .account-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .account-avatar img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 3px solid #007bff;
        }
        .account-details {
            flex: 1;
            margin-left: 20px;
        }
        .table th {
            width: 150px;
            text-align: left;
        }
        .table td {
            color: #333;
        }
        .account-actions {
            margin-top: 20px;
        }
        .account-actions .btn {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block title %}Compte - {{ user.username }}{% endblock %}

{% block body %}
    <div class="account-container">
        <div class="account-header">
            <h1>Bonjour, {{ user.username }}!</h1>
            <p class="account-subtitle">Informations du compte: </p>
        </div>

        <div class="account-info">
            <div class="account-avatar">
                {% if user.avatar %}
                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="Avatar of {{ user.username }}">
                {% else %}
                    <img src="{{ asset('images/default-avatar.png') }}" alt="Default Avatar">
                {% endif %}
            </div>
            <div class="account-details">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.mail }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="account-actions">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit Profile</a>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                    {{ include('user/_delete_form.html.twig', {class: 'btn btn-danger'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


